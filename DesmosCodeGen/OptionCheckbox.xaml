<UserControl x:Class="DesmosCodeGen.OptionCheckbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesmosCodeGen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- A checkbox with a corresponding label -->
        <StackPanel Style="{StaticResource ChoiceListItemPanel}">
            <Label x:Name="optionLabel" Style="{StaticResource ChoiceListItemLabel}">Option: </Label>
            <CheckBox x:Name="optionCheck" Style="{StaticResource ChoiceListItemCheckbox}"></CheckBox>
        </StackPanel>            
    </Grid>
</UserControl>
